<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.container">
            <block class="Rely\Payment\Block\Marketing\Category\Promotion" name="catalog.category.rely.tagline" before="header-wrapper" template="Rely_Payment::marketing/category/promotion.phtml">
                <block class="Rely\Payment\Block\Marketing\Category\Promotion" name="checkout.category.rely.installment.banner_strip.content" as="installment_banner_strip_content" template="Rely_Payment::marketing/category/installment/banner_strip.phtml"/>
                <block class="Rely\Payment\Block\Marketing\Category\Promotion" name="checkout.category.rely.pay_later.banner_strip.content" as="pay_later_banner_strip_content" template="Rely_Payment::marketing/category/paylater/banner_strip.phtml"/>
            </block>
        </referenceContainer>
    </body>
</page>
